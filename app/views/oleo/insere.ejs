<body>
    <%- include ('../partials/homenavbar.ejs'); %>
    <div class="container">
        <div class="card" id="formulario-cadastro">
            <div class="card-header">
                <h3>Cadastrar óleo</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvaoleo">
                        <label>Nome Comum</label>
                        <input type="text" placeholder="Nome Comum" class="form-control" name="nome_comum">
                        <label>Nome Cientifico</label>
                        <input type="text" placeholder="Nome Cientifico" class="form-control" name="nome_cientifico">
                        <label>Foto</label>
                        <input type="text" placeholder="digite a URL da imagem" class="form-control" name="foto">
                        <br><label>Descrição</label>
                        <textarea placeholder="Descreva seu óleo aqui" class="form-control" name="descricao"></textarea>
                        <br>
                        <button class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</body>

